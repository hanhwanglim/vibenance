{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"prebuild": "cd ../web && bun run build",
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.mjs"
	},
	"dependencies": {
		"@orpc/client": "catalog:",
		"@orpc/openapi": "catalog:",
		"@orpc/server": "catalog:",
		"@orpc/zod": "catalog:",
		"@vibenance/api": "workspace:*",
		"@vibenance/auth": "workspace:*",
		"@vibenance/db": "workspace:*",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"grammy": "^1.38.4",
		"hono": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"typescript": "^5.8.2",
		"@types/bun": "^1.2.6",
		"tsdown": "^0.16.5",
		"@vibenance/config": "workspace:*"
	}
}
