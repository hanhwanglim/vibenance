{
	"name": "vibenance",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"hono": "^4.11.3",
			"@orpc/server": "^1.13.2",
			"@orpc/openapi": "^1.13.2",
			"@orpc/zod": "^1.13.2",
			"better-auth": "^1.4.10",
			"dotenv": "^17.2.3",
			"@orpc/client": "^1.13.2",
			"drizzle-orm": "^1.0.0-beta.8-734e789",
			"zod": "^4.3.4"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"check:unsafe": "biome check --write --unsafe",
		"prepare": "husky || true",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @vibenance/db db:push",
		"db:init": "turbo -F @vibenance/db db:init",
		"db:seed": "turbo -F @vibenance/db db:seed",
		"db:reset": "turbo -F @vibenance/db db:reset",
		"db:studio": "turbo -F @vibenance/db db:studio",
		"db:generate": "turbo -F @vibenance/db db:generate",
		"db:migrate": "turbo -F @vibenance/db db:migrate",
		"db:start": "turbo -F @vibenance/db db:start",
		"db:watch": "turbo -F @vibenance/db db:watch",
		"db:stop": "turbo -F @vibenance/db db:stop",
		"db:down": "turbo -F @vibenance/db db:down"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@commitlint/cli": "^20.3.0",
		"@commitlint/config-conventional": "^20.3.0",
		"@types/bun": "^1.3.5",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"turbo": "^2.7.2"
	},
	"lint-staged": {
		"*": [
			"biome check --write ."
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"packageManager": "bun@1.3.5"
}
