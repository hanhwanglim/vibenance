{
	"name": "@vibenance/db",
	"type": "module",
	"exports": {
		".": {
			"default": "./src/index.ts"
		},
		"./*": {
			"default": "./src/*.ts"
		}
	},
	"scripts": {
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:start": "docker compose up -d",
		"db:watch": "docker compose up",
		"db:stop": "docker compose stop",
		"db:down": "docker compose down",
		"db:seed": "tsx src/seed.ts",
		"db:reset": "tsx src/reset.ts"
	},
	"devDependencies": {
		"@types/pg": "^8.11.11",
		"@vibenance/config": "workspace:*",
		"drizzle-kit": "^0.31.2",
		"drizzle-seed": "^0.3.1",
		"tsx": "^4.21.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"drizzle-orm": "catalog:",
		"pg": "^8.14.1",
		"dotenv": "catalog:",
		"zod": "^4.1.11"
	}
}
